<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/running_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="03月18日 | 16 : 24 -- 16 : 35" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <com.sailflorve.runhdu.view.NumberView
                android:id="@+id/step_number_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:numberText="0"
                app:numberDesText="步数"
                app:numberUnitText="步">
            </com.sailflorve.runhdu.view.NumberView>

            <com.sailflorve.runhdu.view.NumberView
                android:id="@+id/energy_number_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:numberText="0"
                app:numberDesText="能量"
                app:numberUnitText="千卡">
            </com.sailflorve.runhdu.view.NumberView>

            <com.sailflorve.runhdu.view.NumberView
                android:id="@+id/dis_number_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:numberText="0"
                app:numberDesText="里程"
                app:numberUnitText="千米">
            </com.sailflorve.runhdu.view.NumberView>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
