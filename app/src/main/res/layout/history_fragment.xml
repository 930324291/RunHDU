<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.sailflorve.runhdu.view.NumberView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:layout_margin="5dp"
                    app:numberDesText="总步数"
                    app:numberText="10992"
                    app:numberUnitText="步">

                </com.sailflorve.runhdu.view.NumberView>

                <com.sailflorve.runhdu.view.NumberView
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    app:numberDesText="总能量"
                    app:numberText="1252"
                    app:numberUnitText="千卡">

                </com.sailflorve.runhdu.view.NumberView>

                <com.sailflorve.runhdu.view.NumberView
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    app:numberDesText="总里程"
                    app:numberText="7.86"
                    app:numberUnitText="千米">
                </com.sailflorve.runhdu.view.NumberView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.sailflorve.runhdu.view.NumberView
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    app:numberDesText="日均步数"
                    app:numberText="1166"
                    app:numberUnitText="步">

                </com.sailflorve.runhdu.view.NumberView>

                <com.sailflorve.runhdu.view.NumberView
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    app:numberDesText="日均能量"
                    app:numberText="255"
                    app:numberUnitText="千卡">

                </com.sailflorve.runhdu.view.NumberView>

                <com.sailflorve.runhdu.view.NumberView
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    app:numberDesText="日均里程"
                    app:numberText="2011"
                    app:numberUnitText="米">

                </com.sailflorve.runhdu.view.NumberView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.sailflorve.runhdu.view.NumberView
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    app:numberDesText="总跑步次数"
                    app:numberText="5"
                    app:numberUnitText="次">

                </com.sailflorve.runhdu.view.NumberView>

                <com.sailflorve.runhdu.view.NumberView
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    app:numberDesText="日均跑步次数"
                    app:numberText="0.72"
                    app:numberUnitText="次">

                </com.sailflorve.runhdu.view.NumberView>

                <com.sailflorve.runhdu.view.NumberView
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    app:numberDesText="总跑步时长"
                    app:numberText="2.81"
                    app:numberUnitText="小时">

                </com.sailflorve.runhdu.view.NumberView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/demo_tip" />
</LinearLayout>